<h1>Search</h1>
<%= link_to 'All Books', books_path %>
<p><%= link_to 'New book', new_book_path %></p>
<%= form_with url: search_res_results_path, local: true, method: :get do |form| %> 
	<p>
	<%= form.label :search %><br>
	<%= form.text_field :search %> for
	<%= #form.select :search_type, ['Title', 'Author', 'ISBN'] 
	%>
	<%= form.check_box :search_type_t %> 
	<%= form.label :search_type_title, 'Title' %>
	<%= form.check_box :search_type_a %> 
	<%= form.label :search_type_author, 'Author' %>
	<%= form.check_box :search_type_i %> 
	<%= form.label :search_type_isbn, 'ISBN' %>
	</p>
	<p>
	<%= form.submit 'search'%>
	</p>
<% end %>
<p><%= link_to 'Home', root_path %></p>

